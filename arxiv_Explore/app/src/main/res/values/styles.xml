<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/LightGoldenrodYellow</item>
        <item name="colorButtonNormal">@color/mainAppColor</item>
    </style>

    <style name="RedAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/mainAppColor</item>
    </style>

</resources>
